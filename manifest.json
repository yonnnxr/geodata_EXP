  "shortcuts": [
    {
      "name": "Mapa Interativo",
      "short_name": "Mapa",
      "description": "Acesso direto ao mapa de dados geográficos",
      "url": "/map.html",
      "icons": [
        {
          "src": "img/shortcut-map.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Estatísticas",
      "short_name": "Stats",
      "description": "Visualizar estatísticas detalhadas",
      "url": "/estatisticas.html",
      "icons": [
        {
          "src": "img/shortcut-stats.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Painel Admin",
      "short_name": "Admin",
      "description": "Painel administrativo",
      "url": "/admin.html",
      "icons": [
        {
          "src": "img/shortcut-admin.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+sisgeti",
      "url": "/handle?type=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "application/geo+json": [".geojson"]
      },
      "icons": [
        {
          "src": "img/file-icon.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "geodata",
          "accept": ["application/geo+json", "application/json"]
        }
      ]
    }
  },
  "permissions": [
    "geolocation"
  ],
  "features": [
    "Cross Origin Isolation"
  ]
} 